{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "src": ["src/*"],
    }
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx", "**/*.config.js", "**/*.spec.ts","**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    ".docker"
  ]
}
